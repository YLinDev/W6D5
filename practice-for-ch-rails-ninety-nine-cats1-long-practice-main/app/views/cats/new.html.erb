<h2> SUBMIT NEW CAT </h2>

<form action="<%= cats_url %>" method="POST"> 

    <label for="name">What's their name? owo </label>
    <input type="text" id="name" name="cat_info[name]" value="<%= @cat.name %>">

        <br/>
    <label for="birthday">Birthday?? hehehe</label>
    <input type="date" id="birthday" name="cat_info[birth_date]" value="<%= @cat.birth_date %>">
        <br/>

    <div>What's their sex?</div>
        
    <label for="male"> M </label>    
        <input type="radio" id="male" name="cat_info[sex]" value="M">
        <br/>

    <label for="female"> F </label>    
        <input type="radio" id="female" name="cat_info[sex]" value="F">
        <br/>

    <label for="color"> Color? hehe </label>    
        <select name="cat_info[color]" id="color">
            <option value="black">black</option>
            <option value="white">white</option>
            <option value="orange">orange</option>
            <option value="brown">brown</option>
        </select>

        <br/>

    <label for="optional_desc"> Additional info?? </label>
        <input type="text" id="optional_desc" name="cat_info[description]" value="">
    

        <br/>

    <input type="submit" value="submit ur cat">


</form>